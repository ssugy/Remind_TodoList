<?xml version="1.0" encoding="utf-8"?>

<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="172dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_setting_up" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/settingUserCircleImg"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center|bottom"
                android:src="@mipmap/ic_launcher" />
        </FrameLayout>

        <TextView
            android:id="@+id/settingUserNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:paddingTop="10dp"
            android:text="Luis Martin"
            android:textColor="@color/setting_main_dark"
            android:textSize="24sp" />

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/setting_main_dark"
                    android:text="Account" />
                <View
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="7dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="center|bottom"
                    android:layout_height="1dp"
                    android:background="@color/setting_main_dark"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</layout>
